definitions:

##############################################
#
#	Common Object definitions
#
##############################################

  CommonErrorReturn:
    properties:
      lineageID:
        type: integer
        description: Unique transaction identifier; used for transactional error handling
      timestamp:
        type: string
        description: Time that the service call was returned
      errorInfo:
        type: array
        items:
          $ref: "#/definitions/CommonErrors"
  
  CommonErrors:
    properties:
      errCode:
        type: string
      errMessage:
        type: string
      errDescription:
        type: string
      errGUID:
        type: string

  Link:
    description: A link to a related resource
    properties:
      rel:
        type: string
      href:
        type: string
      type:
        type: string
      title:
        type: string
  Error:
    description: An error condition
    properties:
      userMessage:
        type: string
        description: A user-friendly message describing the error and (ideally) what to do about it
      devopsMessage:
        type: string
        description: A detailed message containing information of use to developers or operations people
  ValidationError:
    description: A collection of global and attribute-level validation errors
    properties:
      errors:
        type: array
        items:
          $ref: "#/definitions/AttributeError"
  AttributeError:
    properties:
      attribute:
        type: string
      errors:
        type: array
        items:
          type: string

##############################################
#
#	Function-Specific Object definitions
#
##############################################

  DwellingTypeRequest:
    properties:
      foo:
        type: string
        description: <dr>
        
  DwellingTypeResponse:
    properties:
      foo:
        type: string
        description: <dr>

  WorkOrderRequest:
    properties:
      foo:
        type: string
        description: <dr>
        
  WorkOrderResponse:
    properties:
      foo:
        type: string
        description: <dr>

  WorkOrderCancelRequest:
    properties:
      BuyFlowCategories:
        type: array
        items: 
          type: string
        description: (Constrained) list of process flows/categories for which to retrieve valid order cancellation codes
        enum:
          - CONNECT
          - DISCONNECT
          - RESTART
          - SPECIAL_REQUEST
          - TROUBLE_CALL
          - UPGRADE_DOWNGRADE
        
  WorkOrderCancelResponse:
    properties:
      goldValue:
        type: string
        description: The RDM "Gold Code" value
      goldDescription:
        type: string
        description: RDM "Gold Description" used for presentation
      goldLongDescription:
        type: string
        description: RDM "Gold Long Description" used for more detailed information
      csgBillerValue:
        type: string
        description: Code to be submitted to CSG when this "Gold Code" is selected
      hiddenFromCSR:
        type: boolean
        description: Is value to be displayed to CSR
      reasonCategory: 
        type: array
        items:
          type: string
        description: List of buy flows/categories to which this value applies

  BadWordsRequest:
    properties:
      foo:
        type: string
        description: <dr>
        
  BadWordsResponse:
    properties:
      foo:
        type: string
        description: <dr>

  HouseCustomRequest:
    properties:
      foo:
        type: string
        description: <dr>
        
  HouseCustomResponse:
    properties:
      foo:
        type: string
        description: <dr>

  CustomerTypeRequest:
    properties:
      foo:
        type: string
        description: <dr>
        
  CustomerTypeResponse:
    properties:
      foo:
        type: string
        description: <dr>

  TelephoneNumberTypeRequest:
    properties:
      foo:
        type: string
        description: <dr>
        
  TelephoneNumberTypeResponse:
    properties:
      foo:
        type: string
        description: <dr>

  SalutationRequest:
    properties:
      foo:
        type: string
        description: <dr>
        
  SalutationResponse:
    properties:
      foo:
        type: string
        description: <dr>
