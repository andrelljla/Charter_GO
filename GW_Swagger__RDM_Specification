definitions:

##############################################
#
#	Common Object definitions
#
##############################################

  CommonErrorReturn:
    properties:
      lineageID:
        type: integer
        description: Unique transaction identifier; used for transactional error handling
      timestamp:
        type: string
        description: Time that the service call was returned
      errorInfo:
        type: array
        items:
          $ref: "#/definitions/CommonErrors"
  
  CommonErrors:
    properties:
      errCode:
        type: string
      errMessage:
        type: string
      errDescription:
        type: string
      errGUID:
        type: string

#  Link:
#    description: A link to a related resource
#    properties:
#      rel:
#        type: string
#      href:
#        type: string
#      type:
#        type: string
#      title:
#        type: string
  Error:
    description: An error condition
    properties:
      userMessage:
        type: string
        description: A user-friendly message describing the error and (ideally) what to do about it
      devopsMessage:
        type: string
        description: A detailed message containing information of use to developers or operations people

#  ValidationError:
#    description: A collection of global and attribute-level validation errors
#    properties:
#      errors:
#        type: array
#        items:
#          $ref: "#/definitions/AttributeError"

#  AttributeError:
#    properties:
#      attribute:
#        type: string
#      errors:
#        type: array
#        items:
#          type: string

##############################################
#
#	Function-Specific Object definitions
#
##############################################

  DwellingTypeRequest:
    properties:
      locationClass:
        type: array
        items:
          type: string
        enum:
          - RESIDENTIAL
          - ENTERPRISE
          - RESI_BULK_MASTER
          - SMALL_BUSINESS
          - TENANT
        description: Specific location class(es) used to restrict the LoV returned
      asOfDate:
        type: string
        format: date
        description: The date for which effective values will be returned.  Default to SYSDATE if not provided explicitly.
      includeDeletedOfferings:
        type: boolean
        description: Include values marked for logical delete.  Default will be FALSE.
      
  DwellingTypeResponse:
    properties:
      goldValue:
        type: string
        description: The RDM "Gold Code" value
      goldDescription:
        type: string
        description: RDM "Gold Description" used for presentation
      goldLongDescription:
        type: string
        description: RDM "Gold Long Description" used for more detailed information
      csgBillerValue:
        type: string
        description: Code to be submitted to CSG when this "Gold Code" is selected
      viewType:
        type: string
        description: <dr>
      HHPFI: 
        type: string
        description: <dr>
      locationClass:
        type: string
        description: Location class (residential, small business etc) to which this value applies
      isDeleted:
        type: boolean
        description: Indicates if the code is logically deleted from the RDM tables
      effectiveStartDate:
        type: string
        description: Effective start date for the value
      effectiveEndDate:
        type: string
        description: Effective end date for the value
        
  WorkOrderRequest:
    properties:
      buyFlowCategories:
        type: array
        items: 
          type: string
        description: (Constrained) list of process flows/categories for which to retrieve valid order cancellation codes
        enum:
          - CONNECT
          - DISCONNECT
          - RESTART
          - SPECIAL_REQUEST
          - TROUBLE_CALL
          - UPGRADE_DOWNGRADE
      asOfDate:
        type: string
        format: date
        description: The date for which effective values will be returned.  Default to SYSDATE if not provided explicitly.
      includeDeletedOfferings:
        type: boolean
        description: Include values marked for logical delete.  Default will be FALSE.
        
  WorkOrderResponse:
    properties:
      foo:
        type: string
        description: <dr>
      isDeleted:
        type: boolean
        description: Indicates if the code is logically deleted from the RDM tables
      effectiveStartDate:
        type: string
        description: Effective start date for the value
      effectiveEndDate:
        type: string
        description: Effective end date for the value

  WorkOrderCancelRequest:
    properties:
      buyFlowCategories:
        type: array
        items: 
          type: string
        description: (Constrained) list of process flows/categories for which to retrieve valid order cancellation codes
        enum:
          - CONNECT
          - DISCONNECT
          - RESTART
          - SPECIAL_REQUEST
          - TROUBLE_CALL
          - UPGRADE_DOWNGRADE
      asOfDate:
        type: string
        format: date
        description: The date for which effective values will be returned.  Default to SYSDATE if not provided explicitly.
      includeDeletedOfferings:
        type: boolean
        description: Include values marked for logical delete.  Default will be FALSE.
  
  WorkOrderCancelResponse:
    properties:
      goldValue:
        type: string
        description: The RDM "Gold Code" value
      goldDescription:
        type: string
        description: RDM "Gold Description" used for presentation
      goldLongDescription:
        type: string
        description: RDM "Gold Long Description" used for more detailed information
      csgBillerValue:
        type: string
        description: Code to be submitted to CSG when this "Gold Code" is selected
      hiddenFromCSR:
        type: boolean
        description: Is value to be displayed to CSR
      reasonCategory: 
        type: array
        items:
          type: string
        description: List of buy flows/categories to which this value applies
      isDeleted:
        type: boolean
        description: Indicates if the code is logically deleted from the RDM tables
      effectiveStartDate:
        type: string
        description: Effective start date for the value
      effectiveEndDate:
        type: string
        description: Effective end date for the value

  BadWordsRequest:
    properties:
      asOfDate:
        type: string
        format: date
        description: The date for which effective values will be returned.  Default to SYSDATE if not provided explicitly.
      includeDeletedOfferings:
        type: boolean
        description: Include values marked for logical delete.  Default will be FALSE.
        
  BadWordsResponse:
    properties:
      badWordID:
        type: string
        description: Unique identifier for the bad word
      badWordDescription:
        type: string
        description: The "bad word" itself
      isDeleted:
        type: boolean
        description: Indicates if the code is logically deleted from the RDM tables
      effectiveStartDate:
        type: string
        description: Effective start date for the value
      effectiveEndDate:
        type: string
        description: Effective end date for the value

